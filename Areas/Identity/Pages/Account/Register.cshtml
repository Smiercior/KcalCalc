@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row text-center">
    <div class="col-md-4 m-auto text-secondary">
         <div class="border border-dark border-3 m-auto p-3">
              <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 class="text-light">@ViewData["Title"]</h1>
                <h2 class="text-light">Create a new account.</h2>
                <div class="border border-dark border-1 w-95 m-auto"></div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Firstname" class="form-control" autocomplete="firstname" aria-required="true" />
                    <label asp-for="Input.Firstname"></label>
                    <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Surname" class="form-control" autocomplete="surname" aria-required="true" />
                    <label asp-for="Input.Surname"></label>
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Register</button>
            </form>
         </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
