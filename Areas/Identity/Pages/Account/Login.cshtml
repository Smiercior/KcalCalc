@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row text-center">
    <div class="col-md-4 m-auto text-secondary">
        <div class="border border-dark border-3 m-auto p-3">
            <h1 class="text-light">@ViewData["Title"]</h1>
            <div class="border border-dark border-1 w-95 m-auto"></div>
             <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox text-light mt-1">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="border border-dark border-1 w-95 mt-4 m-auto"></div>
                    <div>
                        <p class="m-1">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-light">Forgot your password?</a>
                        </p>
                        <p class="m-1">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light">Register as a new user</a>
                        </p>
                        <p class="m-1">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-light">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
